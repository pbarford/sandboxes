<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                    android:color="#ff19ef29" />
            <stroke
                    android:width="1dp"
                    android:color="#ff6b992d" />
            <corners
                    android:radius="6dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="#ff86ef2c"
                    android:endColor="#ff6b992d"
                    android:angle="270" />
            <stroke
                    android:width="1dp"
                    android:color="#ff6b992d" />
            <corners
                    android:radius="6dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
</selector>